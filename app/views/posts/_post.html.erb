<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= post.desc %>
  </p>
  <p>
    <%= post.video %>
    <%= post.image %>
    <%=post.image.present? ? image_tag(post.image) : post.image %>
  </p>
  <p>
    <strong>Description:</strong>
    <%= post.desc %>
  </p>

</div>
