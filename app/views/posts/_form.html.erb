<style>
  .btn-primary {
    border: 1px solid black;
    border-radius: 10px;
    margin:10px;
    padding: 10px;
    background-color: #4CAF50;
    cursor: pointer;
  }
  .btn-primary:hover {
    background-color: #fff;
  }
</style>
<div style="background-color: #f2f2f2; width:70%; padding:20px;">
  <%= form_with(model: post) do |form| %>
    <% if post.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

        <ul>
          <% post.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :title, style: "display: block;"%>
      <%= form.text_field :title, style: "border:1px solid black;" %>
    </div>

    <div>
      <%= form.label :desc, "Description", style: "display: block" %>
      <%= form.text_field :desc, style: "border:1px solid black;" %>
    </div>

    <div>
      <%= form.label :image, style: "display: block" %>
      <%= form.file_field :image %>
    </div>

    <div>
      <%= form.label :video, style: "display: block" %>
      <%= form.file_field :video %>
    </div>
    <div>
      <%= form.submit class: 'btn-primary' %>
    </div>
  <% end %>

</div>
